<!doctype html>
<html lang=en>
<head>
	<meta charset=utf-8>
	<title>{{.User | html}} · jekyll-history-service</title>
	<link rel=stylesheet href="{{"style.css" | asset_path}}">
</head>
<body>
	<h1>jekyll-history-service</h1>
	<h2>{{.User | html}}</h2>

	<ul>
	{{- with $base := .}}
	{{- range .Repos}}
		<li><a href="/u/{{$base.User | urlquery}}/r/{{.Name | urlquery}}/">{{.FullName | html}}</a>: {{.Description | html}}</li>
	{{- end}}
	{{- end}}
	</ul>

	{{- if (or (ne .Resp.PrevPage 0) (ne .Resp.NextPage 0))}}

	<p>
		{{- if (eq .Resp.PrevPage 1) -}}
			<a href="/u/{{.User | urlquery}}/">← Prev page</a>
		{{- else if (ne .Resp.PrevPage 0) -}}
			<a href="/u/{{.User | urlquery}}/p/{{.Resp.PrevPage}}/">← Prev page</a>
		{{- end -}}
		{{- if (and (ne .Resp.PrevPage 0) (ne .Resp.NextPage 0))}} · {{end -}}
		{{- if (ne .Resp.NextPage 0) -}}
			<a href="/u/{{.User | urlquery}}/p/{{.Resp.NextPage}}/">Next page →</a>
		{{- end -}}
	</p>
	{{- end}}
</body>
